<div class="byline">
{# This sets the author in the byline #}
<i class="fa-solid fa-user"></i>Chester Jankowski

{# This sets the post date in the byline #}
<i class="fa-solid fa-calendar"></i> {{ date | readableDate("LLLL d yyyy") }} 

{# This sets the categories; every post should have at least one #}
<i class="fa-solid fa-folder"></i>
{% for category in categories %}
	<a href="/category/{{ category | slugify }}"> {{ category }}</a>
	{%- if not loop.last %}, {% endif %}
{% endfor %}

{# This sets the tags; the first line checks if they exist bc not all posts need them #}
{% for tag in tags | filterTagList %}
		{% if loop.first %}
		<i class="fa-solid fa-tags"></i>
		{% endif %}
		<a href="/tag/{{ tag | slugify }}">{{ tag }}</a>
		{%- if not loop.last %}, {% endif %}
{% endfor %}
</div>